{
	"name": "@teamstatus/app",
	"version": "0.0.0-development",
	"description": "Teamstatus.space web application written using Vite and Preact",
	"keywords": ["spa", "webapp", "vite", "preact"],
	"type": "module",
	"scripts": {
		"prepare": "husky install && check-node-version --package && npx tsx --no-warnings openmoji-convert.ts",
		"start": "vite",
		"build": "node --max_old_space_size=8192 ./node_modules/vite/bin/vite.js build --emptyOutDir",
		"test": "npx tsx --test --test-reporter spec src/**/*.spec.ts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/teamstatus/app.git"
	},
	"bugs": {
		"url": "https://github.com/teamstatus/app/issues"
	},
	"homepage": "https://github.com/teamstatus/app#readme",
	"author": "Markus Tacker <m@coderbyheart.com> | coderbyheart.com",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "1.2.2",
		"@nordicsemiconductor/asset-tracker-cloud-code-style": "12.0.94",
		"@nordicsemiconductor/from-env": "2.0.0",
		"@playwright/test": "1.38.1",
		"@preact/preset-vite": "2.5.0",
		"@types/chance": "1.1.4",
		"@types/color": "^3.0.4",
		"@types/lodash-es": "4.17.9",
		"bootstrap": "5.3.2",
		"chance": "1.1.11",
		"check-node-version": "4.2.1",
		"handlebars": "4.7.8",
		"husky": "8.0.3",
		"openmoji": "14.0.0",
		"prettier": "3.0.3",
		"tsmatchers": "5.0.0",
		"typescript": "5.2.2",
		"vite": "4.4.11",
		"wrangler": "3.12.0"
	},
	"lint-staged": {
		"*.{md,yaml,yml}": ["prettier --write"],
		"*.{json,ts,tsx}": ["npx biome format --write", "npx biome check"]
	},
	"engines": {
		"node": ">=20",
		"npm": ">=9"
	},
	"release": {
		"branches": ["saga"],
		"remoteTags": true,
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			[
				"@semantic-release/github",
				{
					"successComment": false,
					"failTitle": false
				}
			]
		]
	},
	"dependencies": {
		"classnames": "2.3.2",
		"color": "4.2.3",
		"date-fns": "2.30.0",
		"lodash-es": "4.17.21",
		"lucide-preact": "0.285.0",
		"micromark": "4.0.0",
		"p-throttle": "5.1.0",
		"preact": "10.18.1",
		"preact-router": "4.1.2",
		"tsx": "3.13.0",
		"ulid": "2.3.0"
	}
}
