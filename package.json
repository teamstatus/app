{
	"name": "@teamstatus/app",
	"version": "0.0.0-development",
	"description": "Teamstatus.space web application written using Vite and Preact",
	"keywords": [
		"spa",
		"webapp",
		"vite",
		"preact"
	],
	"type": "module",
	"scripts": {
		"prepare": "husky && check-node-version --package && npx tsx --no-warnings openmoji-convert.ts",
		"start": "vite",
		"build": "node --max_old_space_size=8192 ./node_modules/vite/bin/vite.js build --emptyOutDir",
		"test": "npx tsx --no-warnings --test --test-reporter spec src/**/*.spec.ts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/teamstatus/app.git"
	},
	"bugs": {
		"url": "https://github.com/teamstatus/app/issues"
	},
	"homepage": "https://github.com/teamstatus/app#readme",
	"author": "Markus Tacker <m@coderbyheart.com> | coderbyheart.com",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@commitlint/config-conventional": "19.2.2",
		"@nordicsemiconductor/from-env": "3.0.1",
		"@playwright/test": "1.45.2",
		"@preact/preset-vite": "2.9.0",
		"@types/chance": "1.1.6",
		"@types/color": "3.0.6",
		"@types/lodash-es": "4.17.12",
		"bootstrap": "5.3.3",
		"chance": "1.1.12",
		"check-node-version": "4.2.1",
		"commitlint": "19.4.0",
		"handlebars": "4.7.8",
		"husky": "9.1.5",
		"openmoji": "15.0.0",
		"prettier": "3.3.3",
		"tsmatchers": "5.0.2",
		"typescript": "5.5.4",
		"vite": "5.4.2",
		"wrangler": "3.72.2"
	},
	"lint-staged": {
		"*.{md,yaml,yml,json}": [
			"prettier --write"
		],
		"*.{ts,tsx}": [
			"npx biome format --write",
			"npx biome check"
		]
	},
	"engines": {
		"node": ">=20",
		"npm": ">=9"
	},
	"release": {
		"branches": [
			"saga"
		],
		"remoteTags": true,
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			[
				"@semantic-release/github",
				{
					"successComment": false,
					"failTitle": false
				}
			]
		]
	},
	"dependencies": {
		"classnames": "2.5.1",
		"color": "4.2.3",
		"lodash-es": "4.17.21",
		"lucide-preact": "0.429.0",
		"micromark": "4.0.0",
		"p-throttle": "6.2.0",
		"preact": "10.23.2",
		"preact-router": "4.1.2",
		"tsx": "4.17.0",
		"ulid": "2.3.0"
	}
}
